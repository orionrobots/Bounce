{
  "name": "Bounce",
  "version": "v0.6.0-r1",
  "description": "NodeMCU/Esp8266 Visual Programming Language.",
  "homepage": "https://github.com/orionrobots/bounce",
  "repository": "https://github.com/orionrobots/bounce",
  "author": {
    "name": "Danny Staple",
    "url": "http://orionrobots.co.uk"
  },
  "license": "Apache-2.0",
  "main": "main.js",
  "build": {
    "directories": {
      "output": "output"
    },
    "files": {
      "filter": [
        "**/*",
        "!tests/*.js",
        "!closure_build_deps/**/*",
        "!output/**/*"
      ]
    },
    "appId": "com.orionrobots.Bounce",
    "mac": {
      "category": "public.app-category.education",
      "icon": "icon.icns",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "icon": "icon.ico"
    },
    "linux": {
      "icon": "icons"
    }
  },
  "scripts": {
    "start": "electron main.js",
    "test": "node_modules/.bin/jasmine",
    "postinstall": "electron-rebuild",
    "pack": "electron-builder -dir",
    "dist": "build"
  },
  "dependencies": {
    "google-closure-library": "^20170910.0.0",
    "node-blockly": "^1.0.26",
    "serialport": "^5.0.0"
  },
  "devDependencies": {
    "electron": "1.4.15",
    "electron-builder": "^19.27.7",
    "electron-rebuild": "^1.5.7",
    "jasmine": "^2.5.3"
  }
}
